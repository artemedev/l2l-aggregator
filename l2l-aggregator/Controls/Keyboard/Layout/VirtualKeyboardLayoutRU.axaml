<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:input="clr-namespace:Avalonia.Input;assembly=Avalonia.Base"
             xmlns:keyboard="clr-namespace:l2l_aggregator.Controls.Keyboard"
             x:Class="l2l_aggregator.Controls.Keyboard.Layout.VirtualKeyboardLayoutRU"
             Background="LightGray">
	<DockPanel>
		<StackPanel Orientation="Vertical" Margin="5" Spacing="4">

			<!-- Row 1 -->
			<Grid ColumnDefinitions="1.2*,*,*,*,*,*,*,*,*,*,*,*,*,1.6*">
				<keyboard:VirtualKey Grid.Column="0" SpecialKey="Back" SpecialIcon="KeyboardEsc"/>
				<keyboard:VirtualKey Grid.Column="1" NormalKey="1" ShiftKey="!" />
				<keyboard:VirtualKey Grid.Column="2" NormalKey="2" ShiftKey="&quot;" />
				<!--<keyboard:VirtualKey Grid.Column="2" NormalKey="2" ShiftKey="" />-->
				<keyboard:VirtualKey Grid.Column="3" NormalKey="3" ShiftKey="â„–" />
				<keyboard:VirtualKey Grid.Column="4" NormalKey="4" ShiftKey=";" />
				<keyboard:VirtualKey Grid.Column="5" NormalKey="5" ShiftKey="%" />
				<keyboard:VirtualKey Grid.Column="6" NormalKey="6" ShiftKey=":" />
				<keyboard:VirtualKey Grid.Column="7" NormalKey="7" ShiftKey="?" />
				<keyboard:VirtualKey Grid.Column="8" NormalKey="8" ShiftKey="*" />
				<keyboard:VirtualKey Grid.Column="9" NormalKey="9" ShiftKey="(" />
				<keyboard:VirtualKey Grid.Column="10" NormalKey="0" ShiftKey=")" />
				<keyboard:VirtualKey Grid.Column="11" NormalKey="-" ShiftKey="_" />
				<keyboard:VirtualKey Grid.Column="12" NormalKey="=" ShiftKey="+" />
				<!--<keyboard:VirtualKey Grid.Column="12" NormalKey="" ShiftKey="" />-->
				<keyboard:VirtualKey Grid.Column="13" SpecialKey="{x:Static input:Key.Back}" SpecialIcon="KeyboardBackspace" />
			</Grid>

			<!-- Row 2 -->
			<Grid ColumnDefinitions="1.4*,*,*,*,*,*,*,*,*,*,*,*,1.8*">
				<keyboard:VirtualKey Grid.Column="0" NormalKey="Tab" SpecialKey="{x:Static input:Key.Tab}" />
				<!--<keyboard:VirtualKey Grid.Column="0" NormalKey="Tab"  />-->
				<keyboard:VirtualKey Grid.Column="1" NormalKey="q" ShiftKey="Q" />
				<keyboard:VirtualKey Grid.Column="2" NormalKey="w" ShiftKey="W" />
				<keyboard:VirtualKey Grid.Column="3" NormalKey="e" ShiftKey="E" />
				<keyboard:VirtualKey Grid.Column="4" NormalKey="r" ShiftKey="R" />
				<keyboard:VirtualKey Grid.Column="5" NormalKey="t" ShiftKey="T" />
				<keyboard:VirtualKey Grid.Column="6" NormalKey="y" ShiftKey="Y" />
				<keyboard:VirtualKey Grid.Column="7" NormalKey="u" ShiftKey="U" />
				<keyboard:VirtualKey Grid.Column="8" NormalKey="i" ShiftKey="I" />
				<keyboard:VirtualKey Grid.Column="9" NormalKey="o" ShiftKey="O" />
				<keyboard:VirtualKey Grid.Column="10" NormalKey="p" ShiftKey="P" />
				<keyboard:VirtualKey x:Name="KeyOpenBrace" Grid.Column="11" NormalKey="["  />
				<!--<keyboard:VirtualKey Grid.Column="11" NormalKey="[" ShiftKey="{" />-->
				<keyboard:VirtualKey x:Name="KeyCloseBrace" Grid.Column="12" NormalKey="]" />
			</Grid>

			<!-- Row 3 -->
			<Grid ColumnDefinitions="1.6*,*,*,*,*,*,*,*,*,*,*,1.8*">
				<keyboard:VirtualKey Grid.Column="0" NormalKey="Caps" />
				<keyboard:VirtualKey Grid.Column="1" NormalKey="a" ShiftKey="A" />
				<keyboard:VirtualKey Grid.Column="2" NormalKey="s" ShiftKey="S" />
				<keyboard:VirtualKey Grid.Column="3" NormalKey="d" ShiftKey="D" />
				<keyboard:VirtualKey Grid.Column="4" NormalKey="f" ShiftKey="F" />
				<keyboard:VirtualKey Grid.Column="5" NormalKey="g" ShiftKey="G" />
				<keyboard:VirtualKey Grid.Column="6" NormalKey="h" ShiftKey="H" />
				<keyboard:VirtualKey Grid.Column="7" NormalKey="j" ShiftKey="J" />
				<keyboard:VirtualKey Grid.Column="8" NormalKey="k" ShiftKey="K" />
				<keyboard:VirtualKey Grid.Column="9" NormalKey="l" ShiftKey="L" />
				<keyboard:VirtualKey Grid.Column="10" NormalKey=";" ShiftKey=":" />
				<keyboard:VirtualKey Grid.Column="11" NormalKey="'" ShiftKey="\" />
				<keyboard:VirtualKey Grid.Column="11" NormalKey="'" ShiftKey="" />
				<keyboard:VirtualKey Grid.Column="12" SpecialKey="{x:Static input:Key.Enter}" SpecialIcon="KeyboardReturn" />
			</Grid>

			<!-- Row 4 -->
			<Grid ColumnDefinitions="1.6*,*,*,*,*,*,*,*,*,*,*,1.6*">
				<keyboard:VirtualKey Grid.Column="0" SpecialKey="{x:Static input:Key.LeftShift}" NormalKey="Shift" />
				<keyboard:VirtualKey Grid.Column="1" NormalKey="z" ShiftKey="Z" />
				<keyboard:VirtualKey Grid.Column="2" NormalKey="x" ShiftKey="X" />
				<keyboard:VirtualKey Grid.Column="3" NormalKey="c" ShiftKey="C" />
				<keyboard:VirtualKey Grid.Column="4" NormalKey="v" ShiftKey="V" />
				<keyboard:VirtualKey Grid.Column="5" NormalKey="b" ShiftKey="B" />
				<keyboard:VirtualKey Grid.Column="6" NormalKey="n" ShiftKey="N" />
				<keyboard:VirtualKey Grid.Column="7" NormalKey="m" ShiftKey="M" />
				<keyboard:VirtualKey Grid.Column="8" NormalKey="," ShiftKey="&lt;" />
				<keyboard:VirtualKey Grid.Column="9" NormalKey="." ShiftKey="&gt;" />
				<keyboard:VirtualKey Grid.Column="10" NormalKey="/" ShiftKey="?" />
				<keyboard:VirtualKey Grid.Column="11" SpecialKey="{x:Static input:Key.RightShift}" NormalKey="Shift" />
				<keyboard:VirtualKey Grid.Column="12" NormalKey="Lang" />
			</Grid>

			<!-- Row 5 -->
			<Grid ColumnDefinitions="1.4*,1.4*,1.4*,5.2*,1.4*,1.4*,1.4*">
				<keyboard:VirtualKey Grid.Column="0" SpecialKey="{x:Static input:Key.LeftCtrl}" NormalKey="Ctrl" />
				<keyboard:VirtualKey Grid.Column="1" SpecialKey="{x:Static input:Key.LWin}" NormalKey="Win" />
				<keyboard:VirtualKey Grid.Column="2" SpecialKey="{x:Static input:Key.LeftAlt}" NormalKey="Alt" />
				<keyboard:VirtualKey Grid.Column="3" SpecialKey="{x:Static input:Key.Space}" NormalKey=" " />
				<keyboard:VirtualKey Grid.Column="4" SpecialKey="{x:Static input:Key.RightAlt}" NormalKey="Alt" />
				<keyboard:VirtualKey Grid.Column="5" SpecialKey="{x:Static input:Key.Apps}" NormalKey="Menu" />
				<keyboard:VirtualKey Grid.Column="6" SpecialKey="{x:Static input:Key.RightCtrl}" NormalKey="Ctrl" />
			</Grid>

		</StackPanel>
	</DockPanel>
</UserControl>
