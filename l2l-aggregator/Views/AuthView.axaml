<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:l2l_aggregator.ViewModels"
			 x:DataType="vm:AuthViewModel"
             x:Class="l2l_aggregator.Views.AuthView">
	<Grid HorizontalAlignment="Center" VerticalAlignment="Center">

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="1">
			<Viewbox Stretch="Uniform">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="100"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="50"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<Image Source="avares://l2l_aggregator/Assets/Images/Logo.png"
							Margin="0,0,0,10"
							Grid.Row="0" />

					<TextBlock Text="Авторизация"
								HorizontalAlignment="Center"
								FontSize="20"
							    FontWeight="Bold"
								Margin="0,0,0,10"
								Grid.Row="1" />

					<TextBlock Text="Логин:"
								HorizontalAlignment="Center"
								Margin="0,10,0,0"
								Grid.Row="2"/>

					<TextBox Text="{Binding Login, Mode=TwoWay}"
								HorizontalAlignment="Stretch"
								
								Grid.Row="3"
								Grid.Column="1"/>
					<!--GotFocus="OnTextBoxGotFocus"-->
					<TextBlock Text="Пароль:"
								HorizontalAlignment="Center"
								Margin="0,10,0,0"
								Grid.Row="4"
								Grid.Column="1"/>

					<TextBox Text="{Binding Password, Mode=TwoWay}"
								HorizontalAlignment="Stretch"
							
								Grid.Row="5"
								Grid.Column="1"/>
	<!--GotFocus="OnTextBoxGotFocus"-->
					<Button Content="Войти"
							Command="{Binding LoginCommand}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center"
							Margin="0,30,0,0"
							Height="50"
							Grid.Row="6"
							Grid.Column="1"/>

					<TextBlock Text="{Binding InfoMessage}"
								Foreground="Red"
								HorizontalAlignment="Center"
								Margin="0,10,0,0"
								Grid.Row="7"
								Grid.Column="1"/>
				</Grid>
			</Viewbox>
		</Grid>
	</Grid>
</UserControl>
